        document.getElementById('menu-toggle2').addEventListener('click', function () {
            const sidebar = document.getElementById('sidebar2');
            const content = document.querySelector('.content');
            const menuToggle = document.getElementById('menu-toggle2');

            if (sidebar.style.left === '-250px') {
                sidebar.style.left = '0';
                content.style.marginLeft = '250px';

                // Change to ❌ when sidebar is open
                menuToggle.innerHTML = '<i class="bi bi-x"></i>';
            } else {
                sidebar.style.left = '-250px';
                content.style.marginLeft = '0';

                // Change back to ☰ when sidebar is closed
                menuToggle.innerHTML = '<i class="bi bi-list"></i>';
            }
        });

    <script>
        function openPopup(url) {
            var width = 800;
            var height = 500;
            var left = (window.innerWidth - width) / 2;
            var top = (window.innerHeight - height) / 2;
            var options = "width=" + width + ",height=" + height + ",top=" + top + ",left=" + left;
            var popupWindow = window.open(url, "_blank", options);
            popupWindow.focus();
        }
    </script>
    <script>
        function showContent(myCarousel) {
            var contents = document.getElementsByClassName('carousel slide');
            for (var i = 0; i < contents.length; i++) {
